@page
@model ConnectionModel
@{
    ViewData["Title"] = "Connection";
}

<form method="POST">
    <input type="text" id="text" asp-for="Name" maxlength="50" placeholder="Pseudo" />  
    <input type="Submit" id="button" asp-for="Button" value="Nouveau joueur" />  
</form>

<div class="joueurs">
    @if (Model.Joueurs != null) {
        foreach (Joueur joueur in Model.Joueurs) {
            @await Html.PartialAsync("_Joueur", joueur)
        }
    }
</div>

<form method="POST">
    <input type="submit" id="button" asp-for="Button" value="Start" />
    <input type="submit" id="button" asp-for="Button" value="Start avec temps" />
</form>

@Model.Message
